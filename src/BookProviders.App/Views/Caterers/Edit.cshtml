@model BookProviders.App.ViewModels.CatererViewModel

@{
    ViewData["Title"] = "Edit Caterer";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-12">
        <vc:summary></vc:summary>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Document" class="control-label"></label>
                    <input asp-for="Document" class="form-control" />
                    <span asp-validation-for="Document" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CatererType" class="control-label"></label> <br />
                    <input type="radio" value="1" asp-for="CatererType" checked /> Person
                    <input type="radio" value="2" asp-for="CatererType" /> Company
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-times"></i> Cancel</a>
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
            </div>
        </form>

        <div id="addressTarget">
            <partial name="_DetailsAddress" />
        </div>
        <h4>Products</h4>
        <hr />
        <partial name="../Products/_ListProducts" model="@Model.Products" />
    </div>
</div>

<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            ajaxModal()
        });
    </script>
}
