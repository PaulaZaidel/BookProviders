@using BookProviders.App.Helpers
@model BookProviders.App.ViewModels.CatererViewModel

@{
    ViewData["Title"] = "Delete Caterer";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="col-md-12">
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Document)</th>
                <th>@Html.DisplayNameFor(model => model.Active)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Name)</td>
                <td>@this.FormatDocument(Model.CatererType, Model.Document)</td>
                <td>@Html.DisplayFor(model => model.Active)</td>
            </tr>
        </tbody>
    </table>

    <partial name="_DetailsAddress" />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-times"></i> Cancel</a>
        <button type="submit" class="btn btn-warning"><i class="fa fa-trash-alt"></i> Delete</button>
    </form>
</div>
