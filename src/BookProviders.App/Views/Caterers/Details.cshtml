@using BookProviders.App.Helpers
@model BookProviders.App.ViewModels.CatererViewModel

@{
    ViewData["Title"] = "Caterer Details - " + @Model.Name;
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="col-md-12">
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Document)</th>
                <th>@Html.DisplayNameFor(model => model.Active)</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Name)</td>
                <td>@this.FormatDocument(Model.CatererType, Model.Document)</td>
                <td>@Html.DisplayFor(model => model.Active)</td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        </tbody>
    </table>

    <partial name="_DetailsAddress" />

    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back</a>
</div>